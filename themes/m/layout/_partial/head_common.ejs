            .toc-level-3 { padding-left: 2em !important; }
            .toc-level-4 { padding-left: 3em !important; font-size: 0.9em !important; }
            .toc-level-5, .toc-level-6 { padding-left: 4em !important; font-size: 0.85em !important; }
            
            .toc-link {
                color: #34495e !important;
                text-decoration: none !important;
