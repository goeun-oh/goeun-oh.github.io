    // .e-content 요소가 존재하고, 포트폴리오 페이지가 아닌 경우에만 적용
    const hasEContent = document.querySelector('.e-content');
    const isHomePage = window.location.pathname === '/' || window.location.pathname === '/index.html';
    
    if (hasEContent && !isHomePage) {
        // 목차 생성 함수
                // 기존 JavaScript 코드에서 createContentTOC() 함수 호출 전에 이 코드들을 추가하세요:

        // 카테고리별 게시글 목차 데이터
        const categoryPosts = {
            'Cortex-M': [
                { title: '1. STM32 보드 소개', url: '/2025/06/23/cortex-m-board-introduction/' },
                { title: '2. STM32CubeIDE 프로젝트 생성', url: '/2025/06/23/cortex-m-project-setup/' },
                { title: '3. Cortex-M 초기환경 세팅 가이드', url: '/2025/06/23/cortex-m-initial-setup-guide/' },
                { title: '4. 바텀부터 LED 제어하기', url: '/2025/06/23/cortex-m-led-control-basics/' },
                { title: '5-1. 코드 개선 과정 - Define과 베이스 주소', url: '/2025/06/23/cortex-m-code-improvement-basic/' },
                { title: '5-2. 코드 개선 과정 - 구조체 활용', url: '/2025/06/23/cortex-m-code-improvement-struct/' },
                { title: '5-3. 코드 개선 과정 - 고급 기법과 성능', url: '/2025/06/23/cortex-m-code-improvement-advanced/' },
                { title: '6. SW Stack과 모듈화', url: '/2025/06/23/cortex-m-software-stack/' },
                { title: '7. 고급 초기환경 설정', url: '/2025/06/23/cortex-m-advanced-setup/' }
            ]
        };

        function detectCurrentCategory() {
            const currentPath = window.location.pathname;
            
            // Cortex-M 카테고리 페이지이거나 cortex-m 포스트인 경우
            if (currentPath.includes('/categories/Cortex-M/') || 
                currentPath.includes('cortex-m') || 
                currentPath.toLowerCase().includes('cortex')) {
                return 'Cortex-M';
            }
            
            return null;
        }

        // 카테고리 목차 생성
        function createCategoryTOC() {
            const currentCategory = detectCurrentCategory();
            if (!currentCategory || !categoryPosts[currentCategory]) return;
            
            const posts = categoryPosts[currentCategory];
            const currentPath = window.location.pathname;
            
            let tocHTML = `
                <div id="category-series-nav">
                    <div class="series-header">
                        <h3>📚 ${currentCategory} 시리즈</h3>
                        <div class="series-progress">총 ${posts.length}편</div>
                    </div>
                    <ul class="series-list">
            `;
            
            posts.forEach((post, index) => {
                const isCurrentPost = currentPath.includes(post.url.split('/').pop());
                const postNumber = index + 1;
                
                tocHTML += `
                    <li class="series-item ${isCurrentPost ? 'current' : ''}">
                        <span class="series-number">${postNumber}</span>
                        ${isCurrentPost ? 
                            `<span class="series-title current-title">${post.title} (현재)</span>` :
                            `<a href="${post.url}" class="series-link">${post.title}</a>`
                        }
                    </li>
                `;
            });
            
            tocHTML += `</ul></div>`;
            
            const content = document.querySelector('.e-content');
            content.insertAdjacentHTML('afterbegin', tocHTML);
        }

        // 함수 호출을 다음과 같이 수정:
        setTimeout(() => {
            createCategoryTOC();  // 이 줄을 추가
            createTOC();          // 기존 createTOC() 호출 전에
            initTOCToggle();
            initTOCHighlight();
        }, 100);
        function createTOC() {
            const content = document.querySelector('.e-content');
            const headings = content.querySelectorAll('h1, h2, h3, h4, h5, h6');
            
            if (headings.length < 2) return; // 헤딩이 2개 미만이면 목차 생성 안함
            
            // 각 헤딩에 ID 추가
            headings.forEach((heading, index) => {
                if (!heading.id) {
                    const text = heading.textContent.trim();
                    const id = 'heading-' + index + '-' + text.toLowerCase()
                        .replace(/[^\w\s-가-힣]/g, '')
                        .replace(/\s+/g, '-');
                    heading.id = id;
                }
            });
            
            // 목차 HTML 생성
            let tocHTML = '<div id="table-of-contents"><div class="toc-header"><h3>📑 목차</h3><button id="toc-toggle" class="toc-toggle">접기</button></div><nav class="toc-nav"><ul class="toc-list">';
            
            headings.forEach((heading) => {
                const level = parseInt(heading.tagName.charAt(1));
                const text = heading.textContent.trim();
                const id = heading.id;
                
                tocHTML += `<li class="toc-item toc-level-${level}">
                    <a href="#${id}" class="toc-link">${text}</a>
                </li>`;
            });
            
            tocHTML += '</ul></nav></div>';
            
            // 목차를 본문 앞에 삽입
            content.insertAdjacentHTML('afterbegin', tocHTML);
        }
        
        // 목차 토글 기능
        function initTOCToggle() {
            const toggleBtn = document.getElementById('toc-toggle');
            const tocNav = document.querySelector('.toc-nav');
            
            if (toggleBtn && tocNav) {
                toggleBtn.addEventListener('click', function() {
                    if (tocNav.style.display === 'none') {
                        tocNav.style.display = 'block';
                        toggleBtn.textContent = '접기';
                    } else {
                        tocNav.style.display = 'none';
                        toggleBtn.textContent = '펼치기';
                    }
                });
            }
        }
        
        // 스크롤 시 현재 섹션 하이라이트
        function initTOCHighlight() {
            const tocLinks = document.querySelectorAll('.toc-link');
            const headings = document.querySelectorAll('.e-content h1, .e-content h2, .e-content h3, .e-content h4, .e-content h5, .e-content h6');
            
            function updateActiveLink() {
                let current = '';
                headings.forEach(heading => {
                    const rect = heading.getBoundingClientRect();
                    if (rect.top <= 100) {
                        current = heading.id;
                    }
                });
                
                tocLinks.forEach(link => {
                    link.classList.remove('active');
                    if (link.getAttribute('href') === '#' + current) {
                        link.classList.add('active');
                    }
                });
            }
            
            window.addEventListener('scroll', updateActiveLink);
            updateActiveLink(); // 초기 호출
        }
        
